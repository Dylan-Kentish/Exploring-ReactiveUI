<Grid x:Class="WpfApp.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:vms="clr-namespace:WpfApp.ViewModels" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance vms:LoginVM}">
    <Border 
        Background="{DynamicResource ui:DynamicColor.ListMedium}"
        BorderBrush="Black"
        BorderThickness="1"
        Margin="5">

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Label Content="Login"/>
            <ui:AutoSuggestBox
                Width="150"
                MaxSuggestionListHeight="200"
                VerticalAlignment="Center"
                PlaceholderText="Username"
                Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                ItemsSource="{Binding Usernames}"/>
        </StackPanel>

    </Border>
</Grid>
